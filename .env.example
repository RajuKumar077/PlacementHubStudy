# PlacementHubStudy Environment Variables Template
# Copy this file to .env and update with your actual values

# =============================================
# FRONTEND CONFIGURATION
# =============================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_SOCKET_URL=http://localhost:5000

# =============================================
# BACKEND CONFIGURATION
# =============================================

# Server Configuration
PORT=5000
NODE_ENV=development
HOST=localhost

# =============================================
# DATABASE CONFIGURATION
# =============================================

# MongoDB Local
MONGODB_URI=mongodb://localhost:27017/placementhubstudy

# MongoDB Atlas (Cloud - Uncomment to use)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/placementhubstudy?retryWrites=true&w=majority

# PostgreSQL (Alternative - Uncomment to use)
# DATABASE_URL=postgresql://user:password@localhost:5432/placementhubstudy

# =============================================
# AUTHENTICATION
# =============================================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# =============================================
# CORS CONFIGURATION
# =============================================

# Frontend URL
CLIENT_URL=http://localhost:3000

# API URL
API_URL=http://localhost:5000

# =============================================
# EMAIL CONFIGURATION
# =============================================

# Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@placementhubstudy.com

# SendGrid (Alternative)
# SENDGRID_API_KEY=your_sendgrid_api_key

# =============================================
# FILE UPLOAD CONFIGURATION
# =============================================

# Cloudinary (Image/File Storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Max File Size (in MB)
MAX_FILE_SIZE=5
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# =============================================
# PAYMENT CONFIGURATION (Optional)
# =============================================

# Stripe
# STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
# STRIPE_SECRET_KEY=sk_test_xxxxx

# =============================================
# THIRD-PARTY SERVICES
# =============================================

# GitHub OAuth (Optional)
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# Google OAuth (Optional)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================
# LOGGING & MONITORING
# =============================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Sentry (Error Tracking)
# SENTRY_DSN=your_sentry_dsn

# =============================================
# REDIS CONFIGURATION (Optional)
# =============================================

# Redis for caching and sessions
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# =============================================
# RATE LIMITING
# =============================================

# Rate limit requests per 15 minutes
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# =============================================
# CORS & SECURITY
# =============================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Session Configuration
SESSION_SECRET=your_session_secret_key

# =============================================
# DEPLOYMENT
# =============================================

# Vercel
# VERCEL_URL=your_vercel_url

# Railway/Render
# DATABASE_PRIVATE_URL=your_private_database_url
